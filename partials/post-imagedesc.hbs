<article class="{{post_class}}">
    <header style="clear:left" class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <section class="post-meta">
			<time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM D, YYYY"}}</time>
        </section>
    </header>
    <section class="post-content" style="overflow:hidden">
			{{#if image}}<img src="{{image}}" style="float:left; margin: 0 20px 0 0" alt="photo_small"/>{{/if}}
			{{excerpt characters="450"}} &#91;<a href="{{url}}">&hellip;</a>&#93;
    </section>
</article>
